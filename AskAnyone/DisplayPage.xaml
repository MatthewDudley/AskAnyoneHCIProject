<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="AskAnyone.DisplayPage">

    <ContentPage.Content>
        
        <StackLayout x:Name="DisplayPageStack" Padding="10,40">

            <Label Text="Question:" TextColor="Black" FontSize="20" HorizontalOptions="Center" />
           
            <!-- Display the question here  -->
            <Frame>

                <Label x:Name="QuestionLabel" TextColor="Black" FontSize="16" HorizontalOptions="Center" />

            </Frame>

            <Label></Label>
            <Label></Label>
            
            <Label Text="Answer:" TextColor="Black" FontSize="20" HorizontalOptions="Center" />
           
            <!-- Display the question here  -->
            <Frame>

                <Label x:Name="AnswerLabel" TextColor="Black" FontSize="16" HorizontalOptions="Center" />

            </Frame>

        </StackLayout>

    </ContentPage.Content>

</ContentPage>